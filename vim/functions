fu! OpenNewTabAndCommandT()
  :tabnew
  :CommandTFlush
  :CommandT
endf

fu! StripTrailingWhitespaces()
  " last search and cursor position.
  let _s=@/
  let l = line(".")
  let c = col(".")

  " remove trailing whitespaces
  %s/\s\+$//e

  " restore previous search history and cursor position
  let @/=_s
  call cursor(l, c)
endf

