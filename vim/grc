so ~/.dotfiles/vim/rc

set spell
set cursorline
set guifont=PragmataPro:h18
set guioptions-=T
set guioptions-=r

" slow down cursor blink
set guicursor=a:blinkon1000-blinkoff1000

noremap <D-r> :CommandTFlush<CR>
noremap <D-D> yy p :startinsert<CR>

inoremap <D-D> <Esc>yy p :startinsert<CR>
inoremap <D-CR> <Esc>o

vnoremap <C-W> <Esc>:call WrapSelection()<CR>

if has("gui_macvim")
  macmenu &File.New\ Tab key=<nop>
  map <D-t> :call OpenNewTabAndCommandT()<CR>
endif
