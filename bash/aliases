alias bo="brew outdated"
alias bup="brew upgrade"
alias bp="brew prune"
alias br="brew rm"
alias bls="brew ls"
alias bll="brew ll"
alias bh="brew home"

alias ga="git add"
alias gaa="git add --all"
alias gb="git branch"
alias gbl="git blame"
alias gd="git diff"
