export EDITOR=subl
export GEMEDITOR=subl
export LC_CTYPE=en_US.UTF-8
export CLICOLOR=YES

if [ -e /usr/share/terminfo/x/xterm-256color ]; then
  export TERM="xterm-256color"
else
  export TERM="xterm-color"
fi

export PGDATA="/usr/local/var/postgres"
export PYTHON="/usr/local/bin/python"
export PYTHONPATH="/usr/local/lib/python2.7/site-packages"
export NODE_PATH="/usr/local/lib/node_modules"
export ANDROID_SDK_ROOT="/usr/local/Cellar/android-sdk/r21.1"
export RBENV_ROOT="/usr/local/var/rbenv"

# Default paths
# Ensure brew is happy by adding /usr/local/(s)bin
# before /usr/bin
export PATH="/usr/local/bin:/usr/local/sbin:/usr/local/mysql/bin:$PATH"

# node
export PATH="/usr/local/share/npm/bin:$PATH"
export PATH="$HOME/.ndenv/bin:$PATH"

# heroku
export PATH="/usr/local/heroku/bin:$PATH"

# Additional brew paths
export PATH="$PATH:$(brew --prefix josegonzalez/php/php55)/bin"

# gnu utils
export PATH="/usr/local/opt/coreutils/libexec/gnubin:$PATH"
export MANPATH="/usr/local/opt/coreutils/libexec/gnuman:$MANPATH"

# My path
export PATH="$HOME/bin:$PATH"
