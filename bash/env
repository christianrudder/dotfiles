export EDITOR=vim
export GEMEDITOR=subl
export LC_CTYPE=en_US.UTF-8
export CLICOLOR=YES
# export GREP_OPTIONS="--color"
export TERM="xterm-color"

export PGDATA="/usr/local/var/postgres"
export PYTHON="/usr/local/bin/python"
export NODE_PATH="/usr/local/lib/node_modules"
export ANDROID_SDK_ROOT="/usr/local/Cellar/android-sdk/r21"

# Default paths
# Ensure brew is happy by adding /usr/local/(s)bin
# before /usr/bin
export PATH="/usr/local/bin:/usr/local/sbin:/usr/local/mysql/bin:$PATH"

# npm bin
export PATH="/usr/local/share/npm/bin:$PATH"

# Additional brew paths
export PATH="$PATH:/usr/local/Cellar/python/2.7.1/bin:/usr/local/share/python"

# gnu utils
export PATH="/usr/local/opt/coreutils/libexec/gnubin:$PATH"
export MANPATH="/usr/local/opt/coreutils/libexec/gnuman:$MANPATH"

# My path
export PATH="$PATH:$HOME/bin"
