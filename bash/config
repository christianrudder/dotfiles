. ~/.dotfiles/bash/colors

HOST=`hostname -s`

# Change prompt color based on hostname
if [ $HOST = 'Ateles' ]; then
  COLOR=$GREEN
elif [ $HOST = 'Cacajao' ]; then
  COLOR=$VIOLET
elif [ $HOST = 'adamjspooner' ]; then
  COLOR=$RED
else
  COLOR=$WHITE
fi

git_branch () {
  git name-rev HEAD 2> /dev/null | sed 's#HEAD\ \(.*\)#(\1)#'
}

# Set the prompt to: "[<user>@<host> <pwd> ] "
export PS1="$BRIGHT_BLACK[$COLOR\u$BRIGHT_BLACK@$COLOR\h $BLUE\w $WHITE\$(git_branch)$BRIGHT_BLACK]$RESET "
