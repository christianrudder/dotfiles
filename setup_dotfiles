#!/usr/bin/env bash

DIR="$HOME/.dotfiles"

ACK="$HOME/.ackrc"
BP="$HOME/.bash_profile"
BRC="$HOME/.bashrc"
GC="$HOME/.gitconfig"
GI="$HOME/.gitignore"
GRC="$HOME/.gvimrc"
IRC="$HOME/.irbrc"
PRY="$HOME/.pryrc"
RRC="$HOME/.railsrc"
RVM="$HOME/.rvmrc"
SCREEN="$HOME/.screenrc"
TM="$HOME/.tm_properties"
VIM="$HOME/.vim"
VRC="$HOME/.vimrc"

function erase_dotfiles {
  # echo "Erasing dotfiles..."
  rm -f $ACK
  rm -f $BP
  rm -f $BRC
  rm -f $GC
  rm -f $GI
  rm -f $GRC
  rm -f $IRC
  rm -f $PRY
  rm -f $RRC
  rm -f $RVM
  rm -f $SCREEN
  rm -f $TM
  rm -f $VIM
  rm -f $VRC
}

function create_symlinks {
  # echo "Creating symlinks..."
  ln -s $DIR/ackrc $ACK
  ln -s $DIR/bash/profile $BP
  ln -s $DIR/bash/profile $BRC
  ln -s $DIR/git/config $GC
  ln -s $DIR/git/ignore $GI
  ln -s $DIR/vim/grc $GRC
  ln -s $DIR/irbrc $IRC
  ln -s $DIR/pryrc $PRY
  ln -s $DIR/railsrc $RRC
  ln -s $DIR/rvmrc $RVM
  ln -s $DIR/screenrc $SCREEN
  ln -s $DIR/tm_properties $TM
  ln -s $DIR/vim $VIM
  ln -s $DIR/vim/rc $VRC
}

# make sure the directory exists
if [ -d $DIR ]; then

  echo "Replace current dotfiles? [1 or 2]"
  select RN in "Replace" "No"; do
    case $RN in
      Replace )
        erase_dotfiles
        create_symlinks
        exit 0
        ;;

      No )
        create_symlinks
        exit 0
        ;;
    esac
  done

fi
